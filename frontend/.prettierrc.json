{
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "endOfLine": "auto",
  "importOrder": [
    "@/hooks/(.*)$",
    "@/@types",
    "@/recoil/(atoms|selectors)",
    "@/styles/(.*)$",
    "@/(components/@common/|components/|pages/)(.*)$",
    "@/constants",
    "@/utils",
    "@/(api|mocks)/(.*)$",
    "react-icons",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderCaseInsensitive": true
}
